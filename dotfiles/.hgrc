[extensions]
hgext.convert=
hgext.color=
hgext.extdiff=
hgext.graphlog=
hgext.hgk=
hgext.mq=
hgext.purge=
hgext.schemes=
hgext.bookmarks=
mercurial_keyring=
relink=
record=
rebase=
progress=
parentrevspec=
pager=

[alias]
slog=log --stat
qreport=!$HG qprev -s ;$HG qdiff; $HG qnext -s
qcat = !cat $($HG root)"/.hg/patches"$(if test "patches" != $($HG qq --active); then echo '-'$($HG qq --active); fi)/$1 | colordiff

[git]
intree=True

[pager]
pager = LESS='FGRX' less
ignore = version, help, update
attend = annotate, cat, diff, export, glog, log, qdiff, qseries, qapplied

[merge-tools]
splice.executable = vim
splice.args = -f $base $local $other $output -c 'SpliceInit'
splice.premerge = keep
splice.priority = 1

[color]
mode = ansi
qseries.applied = green bold underline
qseries.unapplied = cyan

[diff]
git=true
showfunc=true
ignorews=true

[worker]
numcpus=4

%include ~/.hgrc.private
