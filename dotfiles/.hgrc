[extensions]
hgext.convert=
hgext.color=
hgext.extdiff=
hgext.graphlog=
hgext.hgk=
hgext.mq=
hgext.purge=
hgext.schemes=
hgext.bookmarks=
mercurial_keyring=
relink=
record=
rebase=
progress=
parentrevspec=
pager=

[git]
intree=True

[pager]
pager = LESS='FGRX' less
ignore = version, help, update
attend = annotate, cat, diff, export, glog, log, qdiff

[merge-tools]
splice.executable = vim
splice.args = -f $base $local $other $output -c 'SpliceInit'
splice.premerge = keep
splice.priority = 1

%include ~/.hgrc.private
